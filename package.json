{
  "name": "desarchitectes.com",
  "private": true,
  "description": "Abécédaire / Abecedario desarchitectes",
  "version": "1.2.2",
  "author": "Mister Telmo <contact.mrtelmo@gmail.com>",
  "dependencies": {
    "@reach/router": "^1.3.x",
    "@types/classnames": "^2.2.x",
    "@types/react-helmet": "^6.1.x",
    "@types/react-scroll": "^1.8.x",
    "classnames": "^2.2.x",
    "dotenv": "^8.2.x",
    "gatsby": "^2.32.x",
    "gatsby-image": "^2.11.x",
    "gatsby-plugin-manifest": "^2.12.x",
    "gatsby-plugin-matomo": "^0.9.x",
    "gatsby-plugin-react-helmet": "^3.10.x",
    "gatsby-plugin-react-svg": "^3.0.x",
    "gatsby-plugin-remove-serviceworker": "^1.0.x",
    "gatsby-plugin-sass": "^3.2.x",
    "gatsby-plugin-sharp": "^2.14.x",
    "gatsby-plugin-typescript": "^2.12.x",
    "gatsby-source-filesystem": "^2.11.x",
    "gatsby-source-strapi": "^0.0.x",
    "gatsby-transformer-sharp": "^2.12.x",
    "react": "^17.0.x",
    "react-dom": "^17.0.x",
    "react-helmet": "^6.1.x",
    "react-markdown": "^5.0.x",
    "react-scroll": "^1.8.x",
    "typescript": "^4.0.x"
  },
  "devDependencies": {
    "gatsby-plugin-webpack-bundle-analyser-v2": "^1.1.x",
    "husky": "^5.0.x",
    "lint-staged": "^10.5.x",
    "node-sass": "^5.0.x",
    "prettier": "^2.2.x",
    "stylelint": "^13.10.x",
    "stylelint-config-airbnb": "^0.0.x",
    "stylelint-config-prettier": "^8.0.x",
    "stylelint-order": "^4.1.x",
    "stylelint-scss": "^3.19.x",
    "ts-standard": "^10.0.x"
  },
  "keywords": [
    "gatsby"
  ],
  "scripts": {
    "build": "GATSBY_ENV=production gatsby build",
    "develop": "GATSBY_ENV=development gatsby develop -H 0.0.0.0",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "npm run develop",
    "serve": "gatsby serve -H 0.0.0.0",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "ts-standard": "ts-standard --fix",
    "prettier": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,md,html}\"",
    "stylelint": "stylelint \"./**/*.{css,scss}\" --fix",
    "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then npm ci; fi",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit --skipLibCheck"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "bash -c 'npm run type-check'",
      "prettier --write",
      "ts-standard --fix"
    ],
    "./**/*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "./**/*.{json,md,html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm ci",
      "post-rebase": "npm i"
    }
  }
}
