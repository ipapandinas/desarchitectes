  "author": "Mister Telmo <contact.mrtelmo@gmail.com>",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.x",
    "@fortawesome/free-brands-svg-icons": "^5.10.x",
    "@fortawesome/free-regular-svg-icons": "^5.10.x",
    "@fortawesome/free-solid-svg-icons": "^5.10.x",
    "@fortawesome/react-fontawesome": "^0.1.x",
    "@reach/router": "^1.3.x",
    "@types/classnames": "^2.2.11",
    "@types/react-helmet": "^6.1.0",
    "@types/react-scroll": "^1.8.2",
    "classnames": "^2.2.x",
    "dotenv": "^8.2.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "gatsby": "^2.18.1x",
    "gatsby-image": "^2.2.x",
    "gatsby-plugin-manifest": "^2.2.x",
    "gatsby-plugin-matomo": "^0.8.x",
    "gatsby-plugin-react-helmet": "^3.1.x",
    "gatsby-plugin-remove-serviceworker": "^1.0.0",
    "gatsby-plugin-sass": "^2.1.x",
    "gatsby-plugin-sharp": "^2.3.x",
    "gatsby-plugin-typescript": "^2.5.0",
    "gatsby-source-filesystem": "^2.1.x",
    "gatsby-source-strapi": "0.0.x",
    "gatsby-transformer-sharp": "^2.3.x",
    "react": "^16.9.x",
    "react-dom": "^16.9.x",
    "react-helmet": "^6.1.x",
    "react-markdown": "^4.2.x",
    "react-scroll": "^1.7.x",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "lint-staged": "9.2.x",
    "node-sass": "^4.13.x",
    "prettier": "^2.1.2",
    "stylelint": "11.0.x",
    "stylelint-config-airbnb": "0.0.x",
    "stylelint-config-prettier": "5.2.x",
    "stylelint-order": "3.1.x",
    "stylelint-scss": "3.11.x"
  },
  "keywords": [
    "gatsby"
  ],
  "scripts": {
    "build": "GATSBY_ENV=production gatsby build",
    "develop": "GATSBY_ENV=development gatsby develop",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "eslint": "eslint --max-warnings=0 --fix --ignore-pattern './node_modules/' --ignore-pattern '!.*.js' \"./**/*.{js,jsx,ts,tsx}\"",
    "prettier": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,md,html}\"",
    "stylelint": "stylelint \"./**/*.{css,scss}\" --fix",
    "post-checkout": "if [[ $HUSKY_GIT_PARAMS =~ 1$ ]]; then npm ci; fi",
    "type-check": "tsc --skipLibCheck"
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0 --fix --ignore-pattern './node_modules/' --ignore-pattern '!.*.js' \"./**/*.{js,jsx,ts,tsx}\" --no-ignore",
      "git add",
      "prettier --write",
      "git add"
    ],
    "./**/*.{css,scss}": [
      "stylelint --fix",
      "git add",
      "prettier --write",
      "git add"
    ],
    "./**/*.{json,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-checkout": "npm run post-checkout",
      "post-merge": "npm ci",
      "post-rebase": "npm i"
    }
  }
}
